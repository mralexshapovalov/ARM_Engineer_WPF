<Window x:Class="ARM_Engineer.Employee.OrganizationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ARM_Engineer.Employee"
        mc:Ignorable="d"
        Title="OrganizationWindow"  Height="450" Width="380" ResizeMode="NoResize">
    <Grid >

        <DataGrid x:Name="dataGrid_Organization" d:ItemsSource="{d:SampleData ItemCount=2}" 
                  MouseDoubleClick="dataGrid_Organization_MouseDoubleClick" 
                  AutoGeneratedColumns="dataGrid_Organization_AutoGeneratedColumns" 
                   IsReadOnly="True" 
                  AutoGenerateColumns="False"  
                  ColumnHeaderHeight="40"  
                  RowHeight="30" 
                  FontSize="14"  
                  AlternatingRowBackground="LightGray" 
                  GridLinesVisibility="None" 
                  FontFamily="Arial" 
                  VerticalAlignment="Top" 
                  Height="431" 
                  SelectedIndex="0" 
                  ColumnWidth="*"  Margin="0,10,0,0" >
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding ID}" Header="ID"  Width="50"/>
                <DataGridTextColumn Binding="{Binding Name}" Header="Наименование организаций" Width="305" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
