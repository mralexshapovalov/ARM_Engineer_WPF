<Window x:Class="ARM_Engineer.Employee.OrganizationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ARM_Engineer.Employee"
        mc:Ignorable="d"
        Title="OrganizationWindow" Height="450" Width="207">
    <Grid >
        <DataGrid x:Name="dataGrid_Organization" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="0,35,0,0" SelectionChanged="dataGrid_Organization_SelectionChanged"/>
        <Button  x:Name="button_select" Content="Выбрать" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="63" Click="button_select_Click"/>
    </Grid>
</Window>
