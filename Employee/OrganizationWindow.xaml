<Window x:Class="ARM_Engineer.Employee.OrganizationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ARM_Engineer.Employee"
        mc:Ignorable="d"
        Title="OrganizationWindow"  Height="447" Width="423" ResizeMode="NoResize">
    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="262*"/>
            <RowDefinition Height="295*"/>
        </Grid.RowDefinitions>
        <DataGrid x:Name="dataGrid_Organization" d:ItemsSource="{d:SampleData ItemCount=5}" SelectionChanged="dataGrid_Organization_SelectionChanged" 
                  IsReadOnly="True" ColumnWidth="*" AutoGeneratedColumns="dataGrid_Organization_AutoGeneratedColumns" AutoGenerateColumns="False"  ColumnHeaderHeight="40"  RowHeight="30" FontSize="14"  HorizontalScrollBarVisibility="Hidden" AlternatingRowBackground="LightGray" GridLinesVisibility="None" FontFamily="Arial" MouseDoubleClick="dataGrid_Organization_MouseDoubleClick" VerticalAlignment="Center"  HorizontalAlignment="Center" 
                  >
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding ID}" Header="ID"  Width="60"/>
                <DataGridTextColumn Binding="{Binding Name}" Header="Наименование организаций" Width="500" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
