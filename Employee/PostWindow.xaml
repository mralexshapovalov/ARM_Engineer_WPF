<Window x:Class="ARM_Engineer.Employee.PostWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ARM_Engineer.Employee"
        mc:Ignorable="d"
        Title="PostWindow" Height="450" Width="236">
    <Grid>
        <DataGrid x:Name="dataGrid_Post" d:ItemsSource="{d:SampleData ItemCount=2}" Margin="0,38,0,0" SelectionChanged="dataGrid_Post_SelectionChanged"/>
        <Button x:Name="buttonSelected" Content="Добавить" HorizontalAlignment="Left" Margin="10,14,0,0" VerticalAlignment="Top" Width="62" Click="button_select_Click"/>

    </Grid>
</Window>
