<Window x:Class="ARM_Engineer.Employee.Employee_Table_Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ARM_Engineer.Employee"
        mc:Ignorable="d"
        Title="Employee_Table_Window" Height="450" Width="813">
    
    <Grid>
        <DataGrid x:Name="Employee_Table_dataGrid" d:ItemsSource="{d:SampleData ItemCount=5}" SelectionChanged="Employee_Table_dataGrid_SelectionChanged" IsReadOnly="True" MouseDoubleClick="Employee_Table_dataGrid_MouseDoubleClick" Margin="0,39,10,10">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Path=Organization.Name}" Header="Organization" />
            </DataGrid.Columns>
        </DataGrid>
        <Button x:Name="Add_Employee_Button" Content="Добавить" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="74" Click="Add_Employee_Button_Click"/>

    </Grid>
    
    

</Window>
