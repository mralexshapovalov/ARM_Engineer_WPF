<Window x:Class="ARM_Engineer.Approval_status.Approval_status_Windows"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ARM_Engineer.Approval_status"
        mc:Ignorable="d"
        Title="Approval_status_Windows" Height="461" Width="423" ResizeMode="NoResize"
       >


    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="46*"/>
        </Grid.ColumnDefinitions>
        <DataGrid x:Name="dataGrid_Approval_status" 
              d:ItemsSource="{d:SampleData ItemCount=5}" 
              Background="White" 
              BorderBrush="#FF0958A5" 
              Foreground="Black" 
              AutoGeneratedColumns="dataGrid_Approval_status_AutoGeneratedColumns" 
              ColumnWidth="200" 
              CanUserAddRows="false" Margin="0,35,0,84" 
              MouseDoubleClick="dataGrid_Approval_status_MouseDoubleClick"
              IsReadOnly="True"
              HorizontalScrollBarVisibility="Hidden"
              AlternatingRowBackground="LightGray" AlternationCount="2" Grid.ColumnSpan="2"/>
        <Button x:Name="button_Remove" 
                Content="Удалить" 
                HorizontalAlignment="Left" 
                Margin="291,405,0,0" 
                VerticalAlignment="Top" 
                Width="72" 
                Click="button_Remove_Click"
                Grid.Column="1" />
        <Button x:Name="button_Add" 
                Content="Добавить"
                HorizontalAlignment="Left" 
                Margin="0,10,0,0"
                VerticalAlignment="Top" 
                Width="74" Click="button_Add_Click" Grid.Column="1"/>
        <Button Name="cmButton" Height="30">
          
                
        </Button>
        <CheckBox Grid.Column="1" Content="CheckBox" HorizontalAlignment="Left" Height="776" Margin="670,114,0,0" VerticalAlignment="Top" Width="154"/>




    </Grid>
</Window>
