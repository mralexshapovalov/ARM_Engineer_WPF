<Window x:Class="ARM_Engineer.Approval_status.Approval_status_Windows"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ARM_Engineer.Approval_status"
        mc:Ignorable="d"
        Title="Approval_status_Windows" Height="490" Width="406" ResizeMode="NoResize">


    <Grid>
        <DataGrid x:Name="dataGrid_Approval_status" 
              d:ItemsSource="{d:SampleData ItemCount=5}" 
              Background="White" 
              BorderBrush="#FF0958A5" 
              Foreground="Black" 
              AutoGeneratedColumns="dataGrid_Approval_status_AutoGeneratedColumns" 
              ColumnWidth="200" 
              CanUserAddRows="false" Margin="0,0,0,119" 
              MouseDoubleClick="dataGrid_Approval_status_MouseDoubleClick"
              IsReadOnly="True"
              
           />
        <Button x:Name="button_Remove" Content="Удалить" HorizontalAlignment="Left" Margin="300,405,0,0" VerticalAlignment="Top" Width="72" Click="button_Remove_Click"/>
        <Button x:Name="button_Add" Content="Добавить" HorizontalAlignment="Left" Margin="44,405,0,0" VerticalAlignment="Top" Width="74" Click="button_Add_Click"/>
        <Button Content="Button" HorizontalAlignment="Center" Margin="0,405,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
    </Grid>
</Window>
