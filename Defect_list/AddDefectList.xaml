            <Button.Effect>
                <DropShadowEffect ShadowDepth="2" Color="Black" Opacity="0.5" BlurRadius="2" Direction="320"/>
            </Button.Effect>
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" Opacity="0.96" SpreadMethod="Reflect" StartPoint="0.5,0">
