<Window x:Class="ARM_Engineer.Nomenclature.Type_of_nomenclatureWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ARM_Engineer.Nomenclature"
        mc:Ignorable="d"
        Title="Type__of__nomenclature" Height="450" Width="255">
    <Grid>
        <DataGrid x:Name="datagridTypeOfNomenclature" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="10,25,10,10" AutoGenerateColumns="False" MouseDoubleClick="datagridTypeOfNomenclature_MouseDoubleClick">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Name}" Header="Наименование" Width="165"/>
                <DataGridTextColumn Binding="{Binding ID}" Header="Код"  Width="60"/>
            </DataGrid.Columns>

        </DataGrid>
       
    </Grid>
</Window>
