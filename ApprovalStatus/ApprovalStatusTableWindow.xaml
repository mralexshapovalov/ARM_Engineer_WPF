<Window x:Class="ARM_Engineer.Approval_status.Approval_status_Windows"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ARM_Engineer.Approval_status"
        mc:Ignorable="d"
        Title="Approval_status_Windows" Height="447" Width="423" ResizeMode="NoResize"
       >


    <Grid Margin="0,0,0,7">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="46*"/>
        </Grid.ColumnDefinitions>
        <Grid.ContextMenu>
            <ContextMenu x:Name="ContextMenu">
                <MenuItem Header="Изменить" Click="Change_ContextMenu"/>
                <MenuItem Header="Удалить" Click="Remove_ContextMenu"/>
            </ContextMenu>
        </Grid.ContextMenu>
        
        <DataGrid x:Name="dataGrid_Approval_status" 
              d:ItemsSource="{d:SampleData ItemCount=5}" 
              Background="White" 
              BorderBrush="#FF717171" 
              Foreground="Black" 
              AutoGeneratedColumns="dataGrid_Approval_status_AutoGeneratedColumns" 
              ColumnWidth="200" 
              CanUserAddRows="false" Margin="0,35,0,-12"
              IsReadOnly="True"
              HorizontalScrollBarVisibility="Hidden"
              AlternatingRowBackground="LightGray" AlternationCount="2" Grid.ColumnSpan="2" SelectionChanged="dataGrid_Approval_status_SelectionChanged_1"/>
        <Button x:Name="button_Add" 
                Content="Добавить"
                HorizontalAlignment="Left" 
                Margin="0,10,0,0"
                VerticalAlignment="Top" 
                Width="74" Click="button_Add_Click" Grid.Column="1"/>
        
    </Grid>
</Window>
