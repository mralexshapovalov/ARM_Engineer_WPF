        <Button x:Name="buttonUnitMeasurement" Content="..." HorizontalAlignment="Left" Margin="463,223,0,0" VerticalAlignment="Top" Width="16" Background="White" BorderBrush="#FFFFFDFD" Height="18">
            <Button.Resources>
